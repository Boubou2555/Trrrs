// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// موديل المستخدم
model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  Int      @unique
  username    String?
  firstName   String?
  lastName    String?
  points      Int      @default(0)
  status      Int      @default(0)  // 0 = نشط، 1 = محظور
  banReason   String?  
  photoUrl    String?
  adsCount    Int      @default(0)    // عدد الإعلانات المشاهدة اليوم
  lastAdDate  DateTime @default(now()) // لتصفير العداد يومياً
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// موديل سجل العمليات
model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  Int      // ربط العملية برقم تليجرام المستخدم
  type        String   // نوع العملية: 'ad', 'purchase', 'admin'
  description String   // وصف العملية
  amount      Int      // القيمة (موجبة أو سالبة)
  status      String   @default("completed") // الحالة: 'pending', 'completed', 'rejected'
  createdAt   DateTime @default(now())
}

// موديل الإشعارات (المطلوب الجديد)
model Notification {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId  Int      // الـ ID الخاص بالمستخدم المستلم
  title       String   // عنوان الإشعار
  message     String   // نص الرسالة
  iconUrl     String   @default("https://cdn-icons-png.flaticon.com/512/3119/3119338.png") // أيقونة افتراضية (جرس)
  isRead      Boolean  @default(false) // حالة القراءة للنقطة الحمراء
  createdAt   DateTime @default(now())
}
