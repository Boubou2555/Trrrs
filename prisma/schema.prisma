datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// نموذج المستخدمين
model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId   Int      @unique
  username     String?
  firstName    String?
  lastName     String?
  points       Int      @default(0)
  status       Int      @default(0)  // 0 = نشط، 1 = محظور
  banReason    String?  
  photoUrl     String?
  adsCount     Int      @default(0)    // عدد الإعلانات المشاهدة اليوم
  lastAdDate   DateTime @default(now()) // تاريخ آخر إعلان لتصفير العداد يومياً
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// نموذج أكواد الهدايا (المعدل إلى رقم Int)
model GiftCode {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  code         Int      @unique          // تم التغيير من String إلى Int لقطع الشك في المسافات
  points       Int                       // عدد النقاط التي يمنحها الكود
  maxUses      Int      @default(1)      // أقصى عدد مرات استخدام للكود
  currentUses  Int      @default(0)      // عدد المرات التي استُخدم فيها الكود فعلياً
  createdAt    DateTime @default(now())
}
